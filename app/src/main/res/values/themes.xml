<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BoomConsumer" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pink</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="NoActionTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme.BoomConsumer.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.BoomConsumer.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.BoomConsumer.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextAppearence.App.TextInputLayout" parent="@android:style/TextAppearance">
        <!--        <item name="android:textColor">@color/black</item>-->
        <!--        <item name="android:textSize">@dimen/_13sdp</item>-->
        <item name="colorControlNormal">@color/black</item>

        //added attributes
        <item name="colorControlActivated">@color/light_blue</item>
        <item name="colorControlHighlight">@color/white</item>

    </style>

    <style name="MyDenseOutlined" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="materialThemeOverlay">@style/MyThemeOverlayOutlinedDense</item>

    </style>

    <style name="MyThemeOverlayOutlinedDense">
        <item name="editTextStyle">@style/MyTextInputEditText_outlinedBox_dense_h
        </item>
    </style>

    <style name="MyTextInputEditText_outlinedBox_dense_h" parent="@style/Widget.MaterialComponents.TextInputEditText.OutlinedBox.Dense">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>


    <style name="MyDropdown" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="materialThemeOverlay">
            @style/MyDropdownText
        </item>
        <item name="endIconMode">dropdown_menu</item>
        <item name="android:textColorPrimary">@color/grey</item>

    </style>

    <style name="MyDropdown2" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="materialThemeOverlay">
            @style/MyDropdownText2
        </item>
        <item name="endIconMode">dropdown_menu</item>
        <item name="android:textColorPrimary">@color/grey</item>

    </style>

    <style name="MyDropdownText" parent="ThemeOverlay.MaterialComponents.AutoCompleteTextView.OutlinedBox">
        <item name="autoCompleteTextViewStyle">
            @style/MyTextOutline
        </item>

    </style>

    <style name="MyDropdownText2" parent="ThemeOverlay.MaterialComponents.AutoCompleteTextView.OutlinedBox">
        <item name="autoCompleteTextViewStyle">
            @style/MyTextOutline
        </item>
        <item name="colorSurface">@color/blue</item>

    </style>

    <style name="MyTextOutline" parent="Base.Widget.MaterialComponents.AutoCompleteTextView">
        <item name="height">30dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <!--        <item name="height">30dp</item>-->
    </style>

    <style name="bottomTabTextViewInActive" parent="TextAppearance.AppCompat.Title">
        <item name="fontFamily">@font/avenir_book</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="bottomTabTextViewActive" parent="TextAppearance.AppCompat.Title">
        <item name="fontFamily">@font/avenir_book</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>

    </style>

    <!--    <style name="Theme.App" parent="Theme.MaterialComponents.*">-->
    <!--        -->
    <!--        <item name="bottomNavigationStyle">@style/Widget.MaterialComponents.BottomNavigationView.Colored</item>-->
    <!--        <item name="colorPrimary">@color/shrine_pink_100</item>-->
    <!--        <item name="colorOnPrimary">@color/shrine_pink_900</item>-->
    <!--    </style>-->

    <style name="bottomTab" parent="Widget.MaterialComponents.BottomNavigationView.Colored">

        <item name="android:background">@color/black_100</item>
        <!--        <item name="itemIconTint">@color/mtrl_bottom_nav_colored_item_tint</item>-->
        <item name="itemRippleColor">@color/mtrl_bottom_nav_colored_ripple_color</item>
        <item name="itemTextAppearanceInactive">@style/bottomTabTextViewInActive</item>
        <item name="itemTextAppearanceActive">@style/bottomTabTextViewActive</item>

        <!--        <item name="itemTextColor">@color/mtrl_bottom_nav_colored_item_tint</item>-->
    </style>


    <style name="TabTheme" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:background">@null</item>
        <item name="tabIndicatorColor">@color/light_green</item>
    </style>


    <style name="TabTheme.Text" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/avenir_light</item>
        <item name="android:fontFamily">@font/avenir_light</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">14sp</item>

        <!--        <item name="itemTextAppearanceActive">@style/TabTextActive</item>-->
    </style>

    <style name="TabTextActive" parent="TextAppearance.AppCompat.Title">
        <item name="background">@drawable/checked_text_container</item>

    </style>

    <style name="PopUpTheme">
        <item name="colorSurface">@color/blue</item>
    </style>

    <style name="NoActionTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="NoActionTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="NoActionTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>