<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.LoginSignUpOptionActivity"
    android:background="@drawable/signuo_login_background">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="200dp"
    android:padding="10dp">


    <LinearLayout
        android:id="@+id/textInputLayout"
        android:layout_marginHorizontal="10pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Login"
            android:textAllCaps="false"
            android:fontFamily="@font/hk_grotesk_regular"
            android:textSize="18dp"
            android:layout_marginHorizontal="10pt"
            android:background="@drawable/roundedrectanglebackground"
            android:layout_below="@+id/signUpTextLayout"
            android:layout_centerHorizontal="true"/>

        <Button
            android:id="@+id/btn_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Sign Up"
            android:textAllCaps="false"
            android:fontFamily="@font/hk_grotesk_regular"
            android:textSize="18dp"
            android:layout_marginHorizontal="10pt"
            android:background="@drawable/roundedrectanglebackground"
            android:layout_below="@+id/signUpTextLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"/>

    </LinearLayout>


</RelativeLayout>

</RelativeLayout>